# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3000
CLIENT_URL=https://your-domain.com

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/meeting-scheduler-pro?retryWrites=true&w=majority

# JWT Configuration (Generate strong secrets in production)
JWT_SECRET=your-production-jwt-secret-key-with-at-least-64-characters
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-production-jwt-refresh-secret-key-with-at-least-64-characters
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM="Meeting Scheduler Pro" <noreply@your-domain.com>

# Logging Configuration
LOG_LEVEL=warn

# Security Configuration
BCRYPT_ROUNDS=14
SESSION_SECRET=your-production-session-secret-key-with-at-least-64-characters

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Application Configuration
APP_NAME="Meeting Scheduler Pro"
APP_VERSION=1.0.0
APP_URL=https://your-domain.com
SUPPORT_EMAIL=support@your-domain.com

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=730

# Notification Configuration
NOTIFICATION_RETENTION_DAYS=90
REMINDER_ADVANCE_MINUTES=15

# Production Security Settings
TRUST_PROXY=true
SECURE_COOKIES=true
HTTPS_ONLY=true

# External Services (Optional)
REDIS_URL=redis://localhost:6379
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_API_KEY=your-analytics-api-key
