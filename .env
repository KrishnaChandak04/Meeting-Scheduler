# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
CLIENT_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/meeting-scheduler-pro

# JWT Configuration
JWT_SECRET=meeting-scheduler-jwt-secret-key-2024-super-secure
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=meeting-scheduler-jwt-refresh-secret-key-2024-super-secure
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Meeting Scheduler Pro" <your-email@gmail.com>

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=meeting-scheduler-session-secret-key-2024

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Application Configuration
APP_NAME="Meeting Scheduler Pro"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
SUPPORT_EMAIL=support@meetingscheduler.com

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365

# Notification Configuration
NOTIFICATION_RETENTION_DAYS=30
REMINDER_ADVANCE_MINUTES=15

# Development Configuration (remove in production)
DEBUG_MODE=true
SEED_DATABASE=false

# Security
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.IO Configuration
SOCKET_IO_ORIGINS=*

# Timezone
DEFAULT_TIMEZONE=UTC

# Cron Jobs
REMINDER_CHECK_INTERVAL=60000

# Logging
LOG_LEVEL=info
